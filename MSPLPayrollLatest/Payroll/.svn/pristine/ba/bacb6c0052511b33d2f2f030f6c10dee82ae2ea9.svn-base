@{
    ViewBag.Title = "CompanyView";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_HomeLayout.cshtml";
}
<h2>Release</h2>
<div class="row">
    <form id="Release" data-toggle="validator" role="form" action="javascript:$Release.save()" style="padding: 50px;">
        <div class="col-md-8">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-4">
                        Category
                    </label>
                    <div class="col-md-6">
                        <select id="sltRCategorylist" class="form-control" autofocus></select>
                    </div>
                </div>

                <div class="nodisp" id="dvemp">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Employee Code
                        </label>
                        <div class="col-md-6">
                            <select id="sltREmployeelist" class="form-control"></select>
                        </div>
                    </div>
                </div>
                <div class="nodisp" id="dvdetails">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Type of Separation <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-6">
                            <select id="sltTypeOfSeparation" class="form-control" required></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Reason for Separation <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-6">
                            <input type="text" id="txtReasonforSeparation" class="form-control" placeholder="Enter the Reason for Separation"
                                   maxlength="60" required />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Separation Date <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-6">
                            <input type="text" id="txtSeparationDate" class="form-control datepicker" placeholder="Enter the Separation Date"
                                   readonly required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Release Date <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-6">
                            <input type="text" id="txtReleaseDate" class="form-control datepicker" placeholder="Enter the Release Date"
                                  readonly required />
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label class="control-label col-md-4">
                            Release Date <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-6">
                            <input type="text" id="txtReleaseDate" class="form-control datepicker" placeholder="Enter the Release Date" readonly required />
                        </div>
                    </div>*@
                    <div class="col-sm-10">
                        <div class="form-group pull-right">
                            <button type="submit" id="btnReleaseSave" class="btn custom-button">
                                Save
                            </button>
                            <button type="button" class="btn custom-button nodisp" data-dismiss="modal">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/Js/Trans/Release.js" type="text/javascript"></script>
<script src="~/Js/Trans/Separation.js"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
