                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="AddLeaveCreditSettings" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static"
             data-keyboard="false">
            @Html.Partial("~/Views/Leave/LeaveCreditsSetting.cshtml")
        </div>
    </div>
</div>
