<style>
    .icon-background2 {
        color: #01978e;
    }

    .fa-info {
        color: red;
    }
</style>

<div class="col-md-12" id="Compoffalert">
    <span class="fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x icon-background2"></i>
        <i class="fa fa-info fa-stack-1x"></i>
    </span>
    <span style="font-size:20px;color:red">Please Enter the Master Settings Before Entering the Comp-Off Settings!!!</span>

</div>


<div class="nodisp" id="Compoffdetails">
    <div class="col-md-12">
        <div class="form-group">
            <h2>Comp-Off Settings</h2>
            <button type="button" id="btnsaveCMPSET" class="btn custom-button">
                Save
            </button>
            <label class="control-label col-md-6 nodisp" id="lblhiddenparameter"></label>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group" id="idDivCompoffDyncomp">
                    <label class="control-label col-md-6" id="idcompoffdynlabel">
                        <label style="color:red;font-size: 13px"></label>
                    </label>
                    <div class="col-md-6">
                        <select id="ddlCompDynamicfield" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">
                        Compensatory Leave credit for:  <label style="color:red;font-size: 13px"></label>
                    </label>
                    <div class="col-md-6">
                        <select id="ddlCosCompoffFor" class="form-control">
                            <option value="0">--Select--</option>
                            <option value="Both">Both</option>
                            <option value="WeekOff">WeekOff</option>
                            <option value="Holiday">Holiday</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">
                        Comp-off Validity Days: <label style="color:red;font-size: 13px"></label>
                    </label>
                    <div class="col-md-6">
                        <input type="text" id="txtCoCVD" class="form-control" onkeypress="return $validator.IsNumeric(event, this.id)" maxlength="3" placeholder="Enter the days count" required value="0" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">
                        Last Validity Date: <label style="color:red;font-size: 13px"></label>
                    </label>
                    <div class="col-md-6">
                        <input type="text" id="dtpLVD" class="form-control" placeholder="Enter the Date"
                               readonly disabled/>
                    </div>
                </div>
                <div class="form-group hide">
                    <label class="control-label col-md-6">
                        Validity period applicable from: <label style="color:red;font-size: 13px"></label>
                    </label>
                    <div class="col-md-6">
                        <select id="ddVPAF" class="form-control">
                            <option value="0">--Select--</option>
                            <option selected value="1">Comp-off earned date</option>
                            <option value="2">Comp-off Approved date</option>
                        </select>
                    </div>
                </div>
            </div>
            @*<div class="col-md-12">
                    <div class="form-group">
                        <button type="submit" id="btnsaveCMPSET" class="btn custom-button">
                            Save
                        </button>
                    </div>
                </div>*@
        </div>
    </div>

    <div class="col-md-12">
        <table id="tblCompOffSettings" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
            <thead>
                <tr>
                    <th class="nodisp"></th>
                    <th>CompOff Paramter</th>
                    <th>Validity Type</th>
                    <th>Validity Days</th>
                    <th>Validity Date</th>
                   
                    <th class="">Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                   
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="~/Js/Leave/MailConfiguration.js" type="text/javascript"></script>
<script src="~/Js/Leave/leaveCreditsettings.js"></script>
<script>
 
    $("#btnsaveCMPSET").on('click', function () {       
        var flg = true;
        if ($('#txtCoCVD').val() == "") {
            $app.showAlert('Please enter the  Comp-off Credit validity days!!!', 4);
            flg = false;
        }
        if ($('#dtpLVD').val() == "") {
            flg = false;
            $app.showAlert('Please Select Last Validity Date!', 4);
        }
        if ($("#ddVPAF").val() == "") {
            flg = false;
            $app.showAlert('Please Select the Validity period applicable from! !!', 4);
        }
        if (flg == true) {
            $LeaveCreditsettings.saveCompoffsettings();
        }


    });
</script>

