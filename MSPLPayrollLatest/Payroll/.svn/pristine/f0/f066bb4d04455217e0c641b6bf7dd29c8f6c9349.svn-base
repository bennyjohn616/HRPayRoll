@{
    ViewBag.Title = "Emp_EmergencyContactList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_HomeLayout.cshtml";
}
<h4>
    Emergency Contact</h4>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <input type="button" id="btnAddEmergencyContact" value="Add" class="btn custom-button btnRight"
                   data-toggle="modal" data-target="#AddEmergencyContact">
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group table-responsive">
            <table id="tblEmergencyContact" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
                <thead>
                    <tr>
                        <th class="nodisp">
                        </th>
                        <th class="nodisp">
                        </th>
                        <th>
                            Contact Name
                        </th>
                        <th>
                            Contact Number
                        </th>
                        <th>
                            Relationship
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div id="AddEmergencyContact" class="modal fade" role="dialog">
        @Html.Partial("~/Views/Employee/Emp_EmergencyContact.cshtml")
    </div>
</div>
<script src="~/Js/Emp/emergencyContact.js" type="text/javascript"></script>
@section Scripts 
{
    <script src="~/Js/Emp/emergencyContact.js" type="text/javascript"></script>
}
