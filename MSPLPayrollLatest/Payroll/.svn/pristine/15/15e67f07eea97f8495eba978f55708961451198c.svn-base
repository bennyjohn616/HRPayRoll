<!-- Modal -->
<form id="frmEmpBenefitComponent" data-toggle="validator" role="form">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Benefit Component
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblsltBenefitComponent">
                            Component Name @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <select id="sltBenefitComponent" class="form-control"> </select>
                            @*<input type="text" id="txtEmpComponentName" class="form-control" placeholder="Enter the Component Name"
                                maxlength="40"  autofocus required />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtAmount">
                            Amount @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtAmount" onkeypress="return $validator.checkDecimal(event, 2)" oncopy="return false" onpaste="return false" class="form-control" placeholder="Enter the Amount"
                                   data-error="Enter the Amount" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtEffectiveDate">
                            Effective Date @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtEffectiveDate" class="form-control datepicker" placeholder="Enter the Effective Date"
                                   data-error="Enter the Effective Date" readonly required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSend" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
