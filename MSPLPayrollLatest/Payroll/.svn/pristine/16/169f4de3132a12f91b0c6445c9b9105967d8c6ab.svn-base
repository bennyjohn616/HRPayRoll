@{
    ViewBag.Title = "FinanceYearList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_ITaxLayout.cshtml";
}

<h2>Finance Year</h2>

<script src="~/assets/plugins/jquery-ui/smoothness/jquery-ui.min.js" type="text/javascript"></script>
<div class="row">
    <div class="col-md-12">
        <input type="button" id="btnAddFinancialYear" value="Add" class="btn custom-button btnRight marginbt7"
               data-toggle="modal" data-target="#AddFinancialYear" onclick="$levFinanceYear.AddInitialize('transHtml');">
    </div>
    <div class="col-md-12 table-responsive">
        <table id="tblFinanceYear" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
            <thead>
                <tr>
                    <th class="nodisp">
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>                  
                    <th>
                        Default
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>                    
                </tr>
            </tbody>
        </table>
    </div>
    <div id="AddFinancialYear" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static"
         data-keyboard="false">
        @Html.Partial("~/Views/Leave/LeaveFinanceYear.cshtml")
    </div>
</div>

<script src="~/Js/Leave/leaveFinanceYear.js" type="text/javascript"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script>

    $levFinanceYear.LoadfinanceYears();
</script>
@section Scripts
{
    <script src="~/Js/Leave/leaveFinanceYear.js" type="text/javascript"></script>
}
<script language="javascript">
        $('.datepicker').datepicker({
            calendarWeeks: true,
            autoclose: true,
            todayHighlight: true,
            beforeShowMonth: function (date) {
                switch (date.getMonth()) {
                    case 8:
                        return false;
                }
            },
            toggleActive: true
        });

</script>
