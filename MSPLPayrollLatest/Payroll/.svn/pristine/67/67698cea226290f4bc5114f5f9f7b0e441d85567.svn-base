

@{
    ViewBag.Title = "EmployeeLeaveReport";
}
<script src="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/js/select2.js"></script>
<script src="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/js/select2.min.js"></script>
<link href="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/css/select2.css" rel="stylesheet" />
<link href="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/css/select2.min.css" rel="stylesheet" />
<div class="col-md-12 ">
    <div class="form-group col-md-6 ">
        <h2>HR View Reports</h2>
    </div>
    <div class="form-group col-md-6 ">
        <div style="float:right">
            <input type="button" id="btnReportView" value="View" onclick="$EmployeeLeaveReport.LoadHRViewReport()" class="btn custom-button">
            <input type="button" id="btnHRReportExport" value="Export" onclick="$EmployeeLeaveReport.Excelreportexport(data='HrReport')" class="btn custom-button ">
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="form-group col-md-6 ">
        <label class="control-label col-md-5">
            From Date <label style="color:red;font-size: 13px">*</label>
        </label>
        <div class="col-md-7">
            <input type="text" id="txtReportFromDate" class="form-control datepicker" placeholder="From Date" readonly />
        </div>
    </div>
    <div class="form-group col-md-6 ">
        <label class="control-label col-md-4">
            To Date <label style="color:red;font-size: 13px">*</label>
        </label>
        <div class="col-md-7">
            <input type="text" id="txtReportToDate" class="form-control datepicker" placeholder="To Date" readonly />
        </div>
    </div>

</div>
<div class="col-md-12">
    <div class="form-group col-md-6 ">
        <label class="control-label col-md-5">
            Employee Code <label style="color:red;font-size: 13px">*</label>
        </label>
        <div class="col-md-7">
            <select class="form-control" id="sltmgrviewrptEmpCode"></select>
        </div>
    </div>
    <div class="form-group col-md-6 ">
        <label class="control-label col-md-4">
            Leave Status <label style="color:red;font-size: 13px">*</label>
        </label>
        <div class="col-md-7">
            <select class="form-control" id="sltleavestatus">
                <option value="99">All Leave</option>
                <option value="0">Pending Leave</option>
                <option value="1">Approved Leave</option>
                <option value="2">Rejected Leave</option>
                <option value="3">Cancelled Leave</option>

            </select>
        </div>
    </div>
</div>
<div id="reportdivid" class="nodisp">




    <label id="lblLevTitle" for="myvalue" style="vertical-align: middle"></label>
    </h4>
    <div class="accordion-content default">

        <div class="col-md-12">
            <div class="form-group">
                <table id="tblHRViewReport" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
                    <thead>
                        <tr>
                            <th class="nodisp">
                            </th>
                            <th>
                                Employee Code
                            </th>
                            <th>
                                Employee Name
                            </th>
                            <th>
                                From Date
                            </th>
                            <th>
                                From Day
                            </th>
                            <th>
                                To Date
                            </th>
                            <th>
                                To Day
                            </th>
                            <th>
                                No Of Days
                            </th>
                            <th>
                                Leave Type
                            </th>
                            <th>
                                Leave Status
                            </th>
                            <th>
                                View Status
                            </th>
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                       </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>




</div>
<div id="ViewStatusPopup" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    @Html.Partial("~/Views/Leave/PendingStatusList.cshtml")
</div>
