
<form id="frmRole" data-toggle="validator" role="form">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Role
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Name <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtName" class="form-control" placeholder="Enter the User Name" 
                                maxlength="25"  autofocus required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Display As <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtDisplayAs" class="form-control" placeholder="Enter the DisplayAs"
                                 maxlength="30"  required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Description <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtDescription" class="form-control" placeholder="Enter the Description" maxlength="100"
                                   required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btnComponentSave" class="btn custom-button">
                            Save
                        </button>
                        <button type="button" class="btn custom-button" data-dismiss="modal">
                            Close
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>