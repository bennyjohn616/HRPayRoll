<script src="~/Js/FlexiPay.js"></script>
<script>

    $(document).ready(function () {
        $('#tblFlexiPay').DataTable({
            'paging': false,
            'searching': false,
            'info': false,
            'columnDefs': [

                { 'className': 'opting-select', 'targets': 1 },
                { 'className': 'input-annum', 'targets': 4 },
                { 'className': 'validation-check', 'targets': 5 }
            ]
        });
    
    $.ajax({
        url: $app.baseUrl + "Entity/GetMasterValue",
        contentType: 'application/json; charset=utf-8',
        type: "GET",
        contentType: false,
        cache: false,
        processData: false,
        success: function (jsonResult) {

            var result = jsonResult.result;
            $("#flexible").val(result.FlexPay);
            $("#flexiValue").val(result.FlexPay);
            $("#basic").val(result.basicPay);
            $("#flexiValue").hide();
            $("#perAnnumSpl").val(result.FlexPay);
            $("#annuSpl").val(result.FlexPay);
            $("#perMonthSpl").val(result.FlexPay / 12);
            debugger;
            if (result.PayrollProc === true && Date.parse(result.CutOffDate) >= Date.now()) {
                debugger;
                $("#btnSaveFlexi").show();
            } else {
                debugger;
                $("#btnSaveFlexi").hide();
            }

        }
    })
    var valuesArray = [];
    debugger;
    $("#tblFlexiPay [data-id]").each(function () {
        var dataId = $(this).data("id"); // Get the value of the data-id attribute

        valuesArray.push(dataId); // Add the data-id to the valuesArray
    });
    $.ajax({
        url: $app.baseUrl + "Entity/LoadFlexiPay",
        type: "POST",
        data: JSON.stringify({ Component: valuesArray }),
        dataType: "json",
        contentType: "application/json",
        success: function (jsonResult) {
            var responseData = jsonResult.result;
            responseData.forEach(function (item) {
                var dataId = item.AttributeModelId.toString();
                var value = parseFloat(item.Value).toFixed(2);
                var $targetInput = $("#tblFlexiPay [data-id='" + dataId + "']");

                if (value !== "0.00" && value !== "") {
                    // Enable the "select yes" option
                    var $selectElement = $targetInput.closest("tr").find(".opting-select");
                    $selectElement.val("yes");

                    // Update the input fields
                    $targetInput.val(value);

                }
            });

            $FlexiPay.calcuFlexi();
            $("#tblFlexiPay").attr("data-entity", responseData[0].EntityId);
            $("#tblFlexiPay").attr("data-modelid", responseData[0].EntityModelId);


        },
        error: function (xhr, textStatus, errorThrown) {

            console.error(errorThrown);
        }
    });
   });
</script>
