<!-- Modal -->
<form id="frmLoanEntry" data-toggle="validator" role="form" action="javascript:$LoanEntry.save()">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Loan Entry
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Loan <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="ddLoan" class="form-control" autofocus required></select>
                        </div>
                    </div>
                    <a><span></span></a>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Loan Date <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtLoanDate" class="form-control datepicker" placeholder="Enter the Date of Loan"
                                  readonly required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Apply On(Month and Year) <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtMonthYear" class="form-control Monthyearpicker" placeholder="Enter the Month and Year of Loan"
                                  readonly required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Loan Amount <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtLoanAmt" onkeypress="return $validator.moneyvalidation(this.id)" oncopy="    return false" onpaste="return false" maxlength="20" class="form-control" placeholder="Enter the Amount of Loan"
                                   required />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-4">
                            No of Installments <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtnoofinstall" onkeypress="return $validator.IsNumeric(e, this.id)" oncopy="return false" onpaste="return false" class="form-control" placeholder="Enter the Number of Installments"
                                   required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Per Month <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtpermonth" class="form-control" placeholder="Enter the Per Month of Amount" onkeypress="return $validator.moneyvalidation(this.id)"
                                   required />
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnLoanEntrySave" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
