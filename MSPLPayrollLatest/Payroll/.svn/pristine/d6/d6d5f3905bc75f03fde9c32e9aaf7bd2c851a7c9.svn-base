<!--Modal-->
<form id="frmBAComponent" data-toggle="validator" role="form" action="javascript:$BAComponent.save()">
    <input type="hidden" id="hdnEmployeeId" value="@Session["EmployeeGUID"]" />
    <input type="hidden" id="hdnEmpId" value="@Session["EmployeeId"]" />
    <input type="hidden" id="hdnRoleName" value="@Session["RoleName"]" />
    <div class="row">
        <div class="col-md-12">
            <h4>Employee Basket Allowance Entry</h4>
            <div class="col-md-8">
                <label class="control-label col-md-2">
                    Employee
                </label>
                <select id="EmpCode" style="margin-right:5px;height:30px" class="control-label col-md-3"></select>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label col-md-2">
                        Year
                    </label>
                    <div class="col-md-2">
                        <input type="text" id="txtYear" class="form-control" readonly onkeypress="return $validator.IsNumeric(event, this.id)" placeholder="Enter The Effective Year " maxlength="4" style="width: 65px;" />
                        @*<select id="txtYear"  class="form-control" autofocus></select>*@
                    </div>

                </div>
            </div>


        </div>

        <div class="col-md-12">
            <h5>
                <label class="control-label" style="margin-top:5px;border:none" id="name">
                    Name :
                </label>
            </h5>

        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label col-md-2">
                    Effective From
                </label>
                <div class="col-md-4">
                    <input type="date" id="effDate" class="form-control" placeholder="Enter The Effective Date" maxlength="10" style="width: 65px;" />
                    <Input id="Select" type="button" class="col-md-2 btn-primary" style="border-style:ridge" value="Proceed" onclick="$BAComponent.LoadData()" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Apply Month/Year
                </label>
                <div class="col-md-2">
                    <input type="text" id="appmmyy" class="form-control" placeholder="Enter Apply mm/yyyy" maxlength="7" style="width: 65px;" />
                </div>

            </div>
        </div>


        <div class="row nodisp" id="data">
            <div class="form-horizontal col-md-7">
                <label class="control-label col-md-3" id="lbltxt1">
                    ID <label style="color:red;font-size: 13px">*</label>
                </label>
                <label class="control-label col-md-2" id="lbltxt3">
                    VALUE <label style="color:red;font-size: 13px">*</label>
                </label>
            </div>

            <div class="col-md-5 center" style="text-align:center">
                <label>Breakup Details - Total : </label>
                <input type="text" id="total" readonly></>
            </div>
        </div>
        <div class="row nodisp" id="data1">
            <div class="col-md-7">
                <select id="UpdComp1" class="form-group-sm col-md-3" style="margin-right:25px;height:28px"></select>
                <input type="text" id="txtId1Amt" class="form-group-sm col-md-3" autocomplete="off" style="margin:0px;padding:2px"
                       onpaste="return $validator.pasteNum(this);" onkeypress="return $validator.IsNumeric(event, this.id)" />
                <input id="btn-add" type="button" class="col-md-pull-1 btn-primary" style="margin-left:5px" value="ADD" onclick="$BAComponent.AddTable()" />
            </div>

            <div class="col-md-5" id="TableArea"></div>

        </div>

        <div class="nodisp" id="OptSave">
            <button type="submit" id="BAbtnSave" class="btn btn-default">
                Save
            </button>
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="$BAComponent.closeMsg()">
                Close
            </button>
        </div>

    </div>

</form>

<script src="~/Js/Company/popup.js" type="text/javascript"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script src="~/Js/application.js" type="text/javascript"></script>
<script src="~/Js/Company/BAComponent.js" type="text/javascript"></script>
<script src="~/assets/js/jquery-confirm.js"></script>


<script>
    $BAComponent.serverDate = '@Session["serverDate"]';
    $companyCom.loadYear({ id: "txtYear" });
    $BAComponent.GetDefaultfinyear();
    $BAComponent.LoadBAComponents();
</script>
