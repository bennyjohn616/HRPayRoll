<!-- Modal -->
<form id="frmEmpNominee" data-toggle="validator" role="form">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Nominee
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtName">
                            Nominee Name @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtName"  class="form-control" placeholder="Enter the Nominee Name"
                                 maxlength="30" onkeypress="return $validator.alphaonly(event, this.id)" autofocus required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtAddress">
                            Address <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtAddress" class="form-control" placeholder="Enter the Address"
                                  maxlength="100" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblddNomineeRelationShip">
                            Relationship @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <select class="form-control" id="ddNomineeRelationShip" required></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtNDateOfBirth">
                            Date of Birth @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtNDateOfBirth" class="form-control datepicker" placeholder="Enter the Date of Birth"
                                  readonly required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtNAge">
                            Age @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtNAge" onkeypress="return $validator.IsNumeric(event, this.id)" oncopy="return false" onpaste="return false" maxlength="3" class="form-control" placeholder="Enter the Age"
                                  readonly required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtAmountPercentage">
                            Amount Percentage @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtAmountPercentage" onkeypress="return $validator.checkDecimal(event, this.id)" oncopy="return false" onpaste="return false" maxlength="4" class="form-control" placeholder="Enter the Amount Percentage" data-error="Enter the Amount Percentage"
                             required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtGuardianNameAddress">
                            Guardian Name & Address @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtGuardianNameAddress" class="form-control" placeholder="Enter the Guardian Name & Address"
                                  maxlength="80" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSend" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
