
@{
    ViewBag.Title = "Index";
}
<div class="form-horizontal">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            <label>Description</label>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" id="txtDescription" class="form-control" placeholder="Description" style="display:none" value="" required />
                            <select id="sltconfiguration" class="form-control"></select>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 ">
                    <div class="form-group  pull-right">
                        <input type="button" id="btnPSSaveSetting" value="Save" onclick="$Payslipsetting.saveSettings()" class="btn custom-button ">
                        <input type="button" id="btnCancelSetting" value="Cancel" onclick="$Payslipsetting.cancelSetting()" class="btn custom-button ">
                        <input type="button" id="btNewSetting" value="New" onclick="$Payslipsetting.newPSSetting()" class="btn custom-button ">
                        <input type="button" id="btDeleteSetting" value="Delete" onclick="$Payslipsetting.deleteSettings()" class="btn custom-button ">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            <label>Title</label>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" id="txtTitle" class="form-control" placeholder="Title" value="" required />
                        </div>
                    </div>
                </div>
