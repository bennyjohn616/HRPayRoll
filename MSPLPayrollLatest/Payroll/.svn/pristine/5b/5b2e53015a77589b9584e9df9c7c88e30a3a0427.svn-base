</div>
<div class="form-horizontal">

    <ul class="nav nav-tabs" id="empNavtabs">
        @*tabs-left*@
        @*<li class="active">
                <a href="#step1" data-toggle="tab" class="wizard" id="wizardStep1">
                    Data Wizard
                </a>
            </li>*@
        <li class="active"><a href="#step1" data-toggle="tab" class="wizard" id="wizardStep4">Categories</a></li>
        <li><a href="#step2" data-toggle="tab" class="wizard" id="wizardStep2"> Master Fields</a></li>
        <li><a href="#step3" data-toggle="tab" class="wizard" id="wizardStep3">Earnings & Deductions</a></li>
        <li><a href="#step6" data-toggle="tab" class="wizard" id="HeaderEdit">Header Content</a></li>
        <li><a href="#step6" data-toggle="tab" class="wizard" id="FooterEdit">Footer Content</a></li>
        <li><a href="#step5" data-toggle="tab" class="wizard" id="Matching">Matching</a></li>
        @*<li><a href="#step5" data-toggle="tab" class="wizard" id="wizardStep5">Report Settings</a></li>*@

    </ul>

    <div class="tab-content" id="tabcontent">
        <div id="step1" class="tab-pane fade in active">
            @Html.Partial("~/Views/DataWizard/Category.cshtml")
        </div>
        <div id="step2" class="tab-pane fade">
            @Html.Partial("~/Views/DataWizard/CatMasterField.cshtml")
        </div>
        <div id="step3" class="tab-pane fade">

            @Html.Partial("~/Views/DataWizard/Earning.cshtml")

            @Html.Partial("~/Views/DataWizard/Deduction.cshtml")

        </div>
        <div id="step5" class="tab-pane fade">
            @Html.Partial("~/Views/DataWizard/Settings.cshtml")
        </div>
        <div id="step6" class="tab-pane fade">
            @Html.Partial("~/Views/DataWizard/ContentEditor.cshtml")
        </div>


    </div>

</div>
<script src="~/js/Company/CompanyCom.js"></script>
<script src="~/Js/DataWizard/Payslipsetting.js"></script>
<script src="~/Js/DataWizard/Grouping.js"></script>
<script src="~/Js/DataWizard/Filter.js"></script>
<script src="~/Js/DataWizard/PayslipMatching.js"></script>
@section scripts
    {
    <script src="~/Js/DataWizard/Payslipsetting.js"></script>
    <script src="~/js/Company/CompanyCom.js"></script>
    <script src="~/Js/DataWizard/PayslipMatching.js"></script>
}

<script>

    $('#empNavtabs a').on("click", function (e) {
        debugger;
        EditContent(this);
    });
    function EditContent(e) {
        if (e.id == "HeaderEdit") {
            $('#ModalCTitle').text('Header Content');
            CKEDITOR.instances.editor.setData($Payslipsetting.HeaderContent);
            return true;
        }
        else if (e.id == "FooterEdit") {
            $('#ModalCTitle').text('Footer Content');
            CKEDITOR.instances.editor.setData($Payslipsetting.FooterContent);
            return true;
        }
        else if (e.id == "Matching") {
            $payslipMatching.renderFieldGrid();
            $payslipMatching.LoadAttributeModels();
        }
    }


</script>