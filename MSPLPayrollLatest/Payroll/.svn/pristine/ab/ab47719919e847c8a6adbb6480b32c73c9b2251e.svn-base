<div class="form-horizontal">
    <form id="frmEmpLevDetails">


        <div id="accordion">


            <h4 class="accordion-toggle" style="cursor: pointer;  width:100%; padding:8px;display:inline-block; border-bottom:1px solid #1a1a1a;background:#5ebab4; transition:all linear 0.15s;font-size:1.200em;text-shadow:0px 1px 0px #1a1a1a;color:#1a1a1a;">

                <label id="lblLevTitle" style="vertical-align: middle">Holiday List</label>
            </h4>
            <div class="accordion-content default">

                <div class="col-md-12">
                    <div class="form-group">
                        <table id="tblEmpHolidayDetails"  class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
                            <thead>
                                <tr>

                                    <th>
                                        Leave Date
                                    </th>
                                    <th>
                                        Holiday Day
                                    </th>
                                    <th>
                                        Reason
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>







        </div>


    </form>
</div>


<script>

    
    $Calendar.LoadEmployeeHolidayDashboard();

</script>


<script>
    //   $(function() {
    //        $( "#accordion-1" ).accordion();
    //});
    $(document).ready(function ($) {
        $('#accordion').find('.accordion-toggle').click(function () {

            //Expand or collapse this panel
            $(this).next().slideToggle('fast');

            //Hide the other panels
            $(".accordion-content").not($(this).next()).slideUp('fast');

        });
    });
</script>