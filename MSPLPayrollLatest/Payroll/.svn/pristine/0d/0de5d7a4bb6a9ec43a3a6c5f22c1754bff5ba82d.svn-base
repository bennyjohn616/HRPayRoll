<form id="frmEmployeement" data-toggle="validator" role="form">
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;</button>
            <h4 class="modal-title" id="H4">
                Add/Edit Employment</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtEmployeementEmpCode">
                        Employee Code @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtEmployeementEmpCode" class="form-control" placeholder="Enter the Employee Code"
                          autofocus required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtEmployeementCompanyName">
                        Company Name @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtEmployeementCompanyName" class="form-control" placeholder="Enter the Company Name"
                           maxlength="50" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtEmployeementPosition">
                        Position Held @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtEmployeementPosition" class="form-control" placeholder="Enter the Position Held"
                           maxlength="20" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtEmployeementWorkFrom">
                        Worked From @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtEmployeementWorkFrom" class="form-control datepicker" placeholder="Enter the Work From"
                           readonly required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtEmployeementWorkTo">
                        Work To @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtEmployeementWorkTo" class="form-control datepicker" placeholder="Enter the Work To"
                           readonly required />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnSend" class="btn custom-button">
                Save</button>
            <button type="button" class="btn custom-button" data-dismiss="modal">
                Close</button>
        </div>
    </div>
</div>
</form>
