<form id="frmEmp_Training" data-toggle="validator" role="form">
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;</button>
            <h4 class="modal-title" id="H4">
                Add/Edit Training</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxTariningName">
                        Training Name @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txTariningName" class="form-control" placeholder="Enter the Training Name"

                          maxlength="40"  autofocus required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtTrainingFrom">
                        Date From @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtTrainingFrom" class="form-control datepicker" placeholder="Enter the Date From"
                           readonly required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtTrainingTo">
                        Date To @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtTrainingTo" class="form-control datepicker" placeholder="Enter the Date To"
                           readonly required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtTrainingCertificate">
                        Certificate Number @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtTrainingCertificate" class="form-control" placeholder="Enter the Certificate Number"
                           maxlength="25" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtTrainingInstitute">
                        Institute @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtTrainingInstitute" class="form-control" placeholder="Enter the Institute"
                           maxlength="60" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnSend" class="btn custom-button">
                Save</button>
            <button type="button" class="btn custom-button" data-dismiss="modal">
                Close</button>
        </div>
    </div>
</div>
</form>
