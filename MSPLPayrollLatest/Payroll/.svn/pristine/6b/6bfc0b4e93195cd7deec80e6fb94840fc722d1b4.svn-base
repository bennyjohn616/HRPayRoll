
<form id="frmLeaveTypeSettings" data-toggle="validator" role="form" action="">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Leave Type Settings
                </h4>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <div class="form-horizontal">



                        @*<div class="form-group">
                            <label class="control-label col-md-6">
                                Leave Type: <label style="color:red;font-size: 13px"></label>
                            </label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <select class="form-control" id="ddlLTSLeaveType" autofocus"></select>
                                    <span class="input-group-addon" data-toggle="modal" data-target="#AddPopup" title="Add New" onclick="javascript: LoadFields('leaveType', 'Leave Type'); $comPopup.AddInitialize(); ">+</span>
                                </div>
                                <span class="input-group-addon" data-toggle="modal" data-target="#AddPopup" title="Add New" onclick="javascript: LoadFields('esiLocation', 'ESI Location'); $comPopup.AddInitialize();">+</span>
                            </div>
                        </div>*@


                        <div class="form-group">
                            <label class="control-label col-md-6" id="">
                                Leave Type: <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <select id="ddlLTSLeaveType" class="form-control"></select>
                                    <span class="input-group-addon" data-toggle="modal" data-target="#AddPopup" title="Add New" onclick="javascript: LoadFields('leaveType', 'Leave Type'); $comPopup.AddInitialize(); ">+</span>
                                </div>
                            </div>
                        </div>




                        <div class="form-group">
                            <label class="control-label col-md-6">
                                Leave Description: <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="txtLTSLeaveTypeDesc" autofocus"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-6">
                                Leave Openings Required: <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <select id="ddlLTSOpnReq" class="form-control">
                                    <option value="select">--Select--</option>
                                    <option value="Y">Yes</option>
                                    <option value="N">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-6">
                                Encashment Available: <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <select id="ddlLTSEncashavail" class="form-control">
                                    <option value="select">--Select--</option>
                                    <option value="Y">Yes</option>
                                    <option value="N">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-6">
                                Used Leave Component Matching:<label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <select id="ddlLTSULPayrollMatch" class="form-control"></select>
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="control-label col-md-6">
                                Active: <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-6">
                                <select id="ddlLTSActive" class="form-control">
                                    <option value="Y">Yes</option>
                                    <option value="N">No</option>
                                </select>
                            </div>
                        </div>
                       
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnsaveLevtypesetting" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>

</form>
<div id="AddPopup" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    @Html.Partial("~/Views/Company/Popup.cshtml")
</div>
<script src="~/Js/Company/popup.js" type="text/javascript"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script>
   
    $('#btnsaveLevtypesetting').on("click", function (e) {
        debugger;
        if( $("#ddlLTSLeaveType").val()=="00000000-0000-0000-0000-000000000000")
        {
            $app.showAlert("Please Select the Leave Type", 4);
        }
        else
        {
            if($("#txtLTSLeaveTypeDesc").val()=="")
            {
                $app.showAlert("Please Enter the Leave Description", 4);
            }
            else
            {
                if($("#ddlLTSOpnReq").val()=="select")
                {
                    $app.showAlert("Please Select the  Openings Required", 4);
                }
                else
                {
                    if($("#ddlLTSEncashavail").val()=="select")
                    {
                        $app.showAlert("Please Select the Encashment Available", 4);
                    }
                    else
                    {
                        if($("#ddlLTSULPayrollMatch").val()=="select")
                        {
                            $app.showAlert("Please Select the Used Leave Component Matching", 4);
                        }
                        else
                        {
                            if (confirm('Do you want to Save this Settings?,Saved data cannot be Change for this Leave Financial year!!!')) {
                                $leaveSettings.SaveLeaveTypeSettings();
                            }
                        }
                    }
                }

            }
        }   
    });
    
    
</script>



