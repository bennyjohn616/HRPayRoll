<h2>HR Credit Report</h2>
<form id="">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-12">

                <div id="empCode" style="display:normal">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Employee code:
                            </label>
                            <div class="col-md-6">
                                <select id="idHrcrdemployeeCode" class="form-control" autofocus></select>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="col-md-4" style="align-items:flex-end">
                    <a id="HRCreditReptExport" style="cursor:pointer;color:grey">Click Here To Export All Employee Data</a>
                </div>

            </div>
            <div class="col-md-12 nodisp" id="idcrdHr">
                <div class="col-md-12">
                    <table id="tblRptCredithr" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">

                        <thead>
                            <tr>
                                <th class="nodisp">
                                    ID
                                </th>
                                <th>
                                    EmployeeCode
                                </th>
                                <th>
                                    CreditDate
                                </th>
                                <th>
                                    LeaveType
                                </th>
                                <th>
                                    Credited Days
                                </th>
                                <th>
                                    Reason
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
        <div class="form-group">
            <input id="hdnEmpId"
                   name="hiddenId"
                   type="hidden"
                   value="@Session["EmployeeId"]" />
            <input id="status"
                   name="hiddenId"
                   type="hidden"
                   value="1" />
        </div>
    </div>
</form>
<script src="~/Js/Leave/LeaveReport.js" type="text/javascript"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script>
    debugger;
    $companyCom.loadEmployeeWithName({ id: 'idHrcrdemployeeCode' });
    $('#idHrcrdemployeeCode').select2();
    $('#HRCreditReptExport').on('click', function () {
        $LeaveReport.ExcelExport("HR", "Credit", $('#hdnEmpId').val());
    });
</script>


