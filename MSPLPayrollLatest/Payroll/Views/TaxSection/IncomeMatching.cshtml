<!-- Modal -->
<form id="frmFormula" data-toggle="validator" role="form" action="javascript:$txMatchingList.saveMatching()">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Matching Master Formula
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Field Name<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtFieldName" class="form-control" placeholder="Enter The Field Name "
                                   maxlength="3" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Description<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtDescription" class="form-control" placeholder="Enter The Description "
                                   maxlength="3" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Matching Component<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltMatchingComponent" class="form-control">
                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Exemption Component<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltExamptionComponent" class="form-control">
                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Gross Section<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltGrossSection" class="form-control">
                                
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Order No <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtOrderNo" class="form-control" onkeypress="return $validator.IsNumeric(event,this.id)" placeholder="Enter Order No "
                                   maxlength="3" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Operator<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltOperator" class="form-control">
                                <option value="00000000-0000-0000-0000-000000000000">--Select--</option>
                                <option value="+">+</option>
                                <option value="-">-</option>
                            </select>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label class="control-label col-md-4">
                            Other Component<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtOtherComponent" class="form-control" placeholder="Enter Other Component "
                                   maxlength="3"  />
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Tax Deduction Mode<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltTaxDeductionmode" class="form-control">
                                <option>--Select--</option>
                                <option value="Normal">Normal</option>
                                <option value="ONETIME">One Time</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.Partial("~/Views/TaxSection/SectionMatching.cshtml");
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSave" class="btn custom-button" onclick="$txMatchingList.saveMatching()">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>



