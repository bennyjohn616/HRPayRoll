<div class="col-md-12 text-right">
    <input type="button" id="btnAddPopup" value="Add" class="btn custom-button marginbt7" data-toggle="modal" data-target="#AddAssignpopup">
</div>
<div id="AddAssignpopup" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">

    <form id="frmAssMgrPopup" data-toggle="validator" role="form" action="">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title" id="H4">
                        <label id="AssignMgrPopupTitle">Add/Edit Assign Manager</label>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">


                            <label class="control-label col-md-4">
                                Manager Code <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-7">
                                <select id="sltManager" class="form-control"></select>
                            </div>
                        </div>
                    </div>

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Manager Name
                            </label>
                            <div class="col-md-7">
                                <input type="text" id="txtMgrName" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Employees  Code
                            </label>
                            <div class="col-md-7">
                                <select id="sltEmpCode" multiple class="form-control">
                                    <option value="0">--Select-- </option>
                                    <option value="1">Yes </option>
                                    <option value="2">No </option>
                                    <option value="3">Noo </option>
                                </select>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" id="btnExpAssMgrSave" onclick="$empExpens.saveAssignMgr()" class="btn custom-button">
                        Save
                    </button>
                    <button type="button" id="btnExpAssMgrClose" class="btn custom-button" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>