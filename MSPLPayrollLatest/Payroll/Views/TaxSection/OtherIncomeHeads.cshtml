<!-- Modal -->
<form id="frmTxSection" data-toggle="validator" role="form" action="javascript:$txOtherIncome.save()">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit TaxSection
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Description <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtTxSecName" class="form-control" placeholder="Enter the  Description "
                                   maxlength="150" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Income Type <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <select id="sltIncomeType" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Limit(anual) <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtSectionLimit" onkeypress="return $validator.IsNumeric(event, this.id)" class="form-control" placeholder="Enter the  Limit "
                                   maxlength="20" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Order Number <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtTxotherSecNumber" onkeypress="return $validator.IsNumeric(event, this.id)" class="form-control" placeholder="Enter The Tax Section Number"
                                   maxlength="20" required />
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSave" class="btn custom-button">
                    Save
                </button>
                <button type="button" onclick="$txOtherIncome.clear()" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>

<script src="~/Js/Tax/otherIncomeHeads.js" type="text/javascript"></script>

<script>
    $companyCom.loadOtherExamption({ id: 'sltIncomeType' }, "OTHERS");
</script>

