@model Payroll.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Payroll</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/assets/css/main.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet"
          type="text/css" />
    <script src="~/assets/js/jquery-1.11.2.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    @* <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js"></script>*@
    <script type="text/javascript" src="~/Js/Login.js"></script>
    <script type="text/javascript" language="javascript">
        $rootUrl = "@Url.Content("~/")";
        //alert($rootUrl);
    </script>
</head>
<body class="body-border" style="background: linear-gradient(rgb(173, 232, 189), #6d986e);">
    <div class="col-md-12">
        <ul class="nav navbar-nav navbar-right">
            <li class="logo-back"></li>
        </ul>
    </div>
    <div class="container">
        <div class="col-md-12">
            <form data-toggle="validator" role="form" id="frmLogin" action="javascript:$login.doLogin();">
                <div class="col-md-4 col-md-offset-4"style="margin-top: 10%;">
                    @*@Html.HiddenFor(model => model.Id, new { id = "hdnid", name = "hdnname" })*@
                    <div class="form-signin" style="width:300px;height:350px">
                        <h3 class="form-signin-heading text-center">
                            Change Password
                        </h3>
                        <hr style="border-top: 1px solid #9d9d9d;" />
                        <div class="form-group">
                            <label class="text-muted">
                                Current Password
                            </label>
                            <input type="password" id="txtCurPass" class="form-control Reqrd" textmode="Password" placeholder="Current Password"
                                   data-error="Enter the  Password" autofocus required />
                        </div>
                        <div class="form-group">
                            <label class="text-muted">
                                New Password
                            </label>
                            <input type="password" id="txtNewPassword" class="form-control Reqrd" textmode="Password"
                                   placeholder="New Password" data-error="Enter the  Password" required />
                        </div>
                        <div class="form-group">
                            <label class="text-muted">
                                Confirm Password
                            </label>
                            <input type="password" id="txtConfirmPassword" class="form-control Reqrd" textmode="Password"
                                   placeholder="Confirm Password" data-error="Enter the   Password" required />
                            <div></div>
                        </div>
                        
                        <div class="form-group col-md-8 col-md-offset-2">
                           
                                <input type="button" id="btnChangePass" class="custom-button " value="Submit" />
                              
                                                                
                                        @*<input type="button" id="btnCancel" class="custom-button" value="Cancel" />*@
                                        <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Cancel" id="btnCancel" class="custom-button" />                        
                              
                            </div>
                    </div>
                </div>
                <div>
                    
                </div>
            </form>
            </div>

            </div>
    <script src="~/Js/application.js" type="text/javascript"></script>
    <script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
    <script src="~/Js/Login.js" type="text/javascript"></script>

</body>

</html>
