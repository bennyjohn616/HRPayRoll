@model Payroll.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Payroll</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/assets/css/main.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet"
          type="text/css" />
    <script src="~/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    @* <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js"></script>*@
    <script type="text/javascript" src="~/Js/Login.js"></script>
    <script type="text/javascript" language="javascript">
        $rootUrl = "@Url.Content("~/")";
        //alert($rootUrl);
    </script>
</head>
<body class="body-border" style="background: linear-gradient(rgb(173, 232, 189), #6d986e);">

    <div class="col-md-12">
        <ul class="nav navbar-nav navbar-right">
            <li class="logo-back"></li>
        </ul>
    </div>
    <div class="container login-box" style="padding-right:0%;padding-left:0%">
        <div class="col-md-12">
            <form data-toggle="validator" role="form" id="frmLogin" action="javascript:$login.doLogin();">
                <div class="col-md-4 col-md-offset-4" style="margin-top: 10%;">
                    <div class="form-signin">
                        <div class="form-group">
                            <img style="margin-top: 3%;margin-left: 9%;" src="assets/images/logo1.png" alt="Company">
                        </div>
                        <h3 class="form-signin-heading text-center">
                            Log In
                        </h3>
                        <hr style="border-top: 1px solid #9d9d9d;" />
                        <div class="form-group">
                            <label class="text-muted">
                                User Name
                            </label>
                            <input type="text" id="txtUsername" class="form-control" placeholder="User Name" data-error="Enter the User Name" autofocus required />
                        </div>
                        <div class="form-group">
                            <label class="text-muted">
                                Password
                            </label>
                            <input type="password" id="txtPassword" class="form-control" textmode="Password" placeholder="Password" data-error="Enter the Password" required />
                        </div>
                        <div class="form-group">
                            <input type="submit" id="btnLogin" class="custom-button btn login" value="Log In" />
                        </div>
                        <div class="form-group nodisp" id="dvError">
                            <span id="lblError" style="color:red">Invalid Username or Password</span>
                        </div>
                        <div class="form-group">
                            <a href="#" class="text-muted" data-toggle="modal" data-target="#ForgotPassword">Forgot your password?</a>
                        </div>
                    </div>
                </div>
            </form>
            <!-- Modal -->
            <div id="ForgotPassword" class="modal fade" role="dialog">
                <form id="forget" data-toggle="validator" role="form">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">
                                    &times;
                                </button>
                                <h4 class="modal-title" id="H4">
                                    Forgot Password
                                </h4>
                            </div>
                            <div class="modal-body">

                                <div class="form-group">
                                    <label class="control-label col-md-4">
                                        Email
                                    </label>
                                    <div class="col-md-7">
                                        <input type="email" id="txtUserForget" class="form-control" placeholder="Enter the Email" data-error="Enter the Email"
                                               autofocus required />
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        <label class="control-label col-md-4">
                                            Company Name
                                        </label>
                                        <div class="col-md-7">
                                            <select id="sltCompanyList" class="form-control"></select>
                                        </div>
                                    </div>*@
                                <div class="nodisp">
                                    <label>
                                        Invalid UserName
                                    </label>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnRequest" class="btn custom-button">
                                    Request Password
                                </button>
                                <button type="button" class="btn custom-button" data-dismiss="modal">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="Browser-support BrowserError nodisp" align="center">
        <img src="~/assets/images/browser_error.jpg" style="height:380px" />
    </div>
    <div class="footer">
        <div class="container">
            <div class="col-md-12">
                <p class="text-muted">
                    &copy; Payroll
                </p>
            </div>
        </div>
    </div>
    <script src="~/Js/application.js" type="text/javascript"></script>
    <script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
    <script src="~/Js/Login.js" type="text/javascript"></script>
    <script>
        //$companyCom.loadCompany({ id: 'sltCompanyList' });
        $login.formload();
    </script>
</body>

</html>
