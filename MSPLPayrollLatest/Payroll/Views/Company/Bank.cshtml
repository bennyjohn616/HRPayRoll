<!-- Modal -->
<form id="frmBank" data-toggle="validator" role="form" action="javascript:$bank.save()">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Bank
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Bank Name <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtBankName" class="form-control" placeholder="Enter the Bank Name"
                                   maxlength="20" autofocus required />
                        </div>
                    </div>
               
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnBankSave" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>


