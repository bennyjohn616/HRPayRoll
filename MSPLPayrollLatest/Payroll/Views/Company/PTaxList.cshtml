@{
    ViewBag.Title = "PTaxList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_HomeLayout.cshtml";

}





<div class="form-horizontal">

    <form id="frmPtaxNew">
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    <h2>
                        PTax List
                    </h2>
                </div><div class="col-sm-6">
                    <button type="button" id="btnPtaxSave" class="btn custom-button pull-right">
                        Save
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Location
                    </label>
                    <div class="col-md-8">
                        <select class="form-control Reqrd" id="sltPTLocation" autofocus required></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="PTaxDisplay" class="nodisp">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Calculation Method
                        </label>
                        <div class="col-md-8">
                            <select class="form-control Reqrd" id="sltCalculationMethod">
                                <option value="Formula">By Formula</option>
                                <option value="Monthly">By Monthly</option>
                                <option value="SixMont">Once in Six Month</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 nodisp" id="PTaxDeductionLastMonths">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            PTax Deduction Last Months
                        </label>
                        <div class="col-md-8">
                            <label class="control-label col-md-2">
                                1st Part
                            </label>

                            <div class="col-md-3">
                                <select id="slt1stPartPTaxDed" class="form-control" required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>
                            <label class="control-label col-md-2">
                                2nd Part
                            </label>

                            <div class="col-md-3">
                                <select id="slt2ndPartPTaxDed" class="form-control" required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>



                        </div>
                    </div>
                </div>
                <div class="col-sm-12 nodisp" id="OnceinSixmonths">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Once in Six months
                        </label>
                        <div class="col-md-8">
                            <label class="control-label col-md-2">
                                1st Part
                            </label>

                            <div class="col-md-2">
                                <select id="slt1stPartOnceinSixmonths1" class="form-control" required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select id="slt1stPartOnceinSixmonths2" class="form-control" disabled required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>

                            <label class="control-label col-md-2">
                                2nd Part
                            </label>

                            <div class="col-md-2">
                                <select id="slt2ndPartOnceinSixmonths1" class="form-control" disabled required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select id="slt2ndPartOnceinSixmonths2" class="form-control" disabled required>
                                    <option value="1">JAN</option>
                                    <option value="2">FEB</option>
                                    <option value="3">MAR</option>
                                    <option value="4">APR</option>
                                    <option value="5">MAY</option>
                                    <option value="6">JUN</option>
                                    <option value="7">JUL</option>
                                    <option value="8">AUG</option>
                                    <option value="9">SEP</option>
                                    <option value="10">OCT</option>
                                    <option value="11">NOV</option>
                                    <option value="12">DEC</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Reg Certificate No
                        </label>
                        <div class="col-md-8">
                            <input type="text" id="txtRegCertificateNo" class="form-control" placeholder="Enter the RegCertificateNo" />
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            P.T.O Circle Number
                        </label>
                        <div class="col-md-8">
                            <input type="text" id="txtPTOCircleNo" class="form-control" placeholder="Enter the PTOCircleNo" />
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Report Format
                        </label>
                        <div class="col-md-8">
                            <select class="form-control Reqrd" id="sltPTRepFormat" ></select>
                        </div>
                    </div>
                </div>

                <div id="PTaxLocGrid">
                    <div class="col-md-12 table-responsive">
                        <table id="tblPTax" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
                            <thead>
                                <tr>
                                    <th class="nodisp">
                                    </th>
                                    <th>
                                        Earnings Range From
                                    </th>
                                    <th>
                                        Earnings Range To
                                    </th>
                                    <th>
                                        Professional Tax Amount
                                    </th>
                                    <th class="nodisp">
                                    </th>
                                    <th class="nodisp">
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>





<script src="~/Js/Company/CompanyCom.js"></script>
<script src="~/Js/Company/PTax.js" type="text/javascript"></script>
@section Scripts
{
    <script src="~/Js/Company/CompanyCom.js"></script>
    <script src="~/Js/Company/PTax.js" type="text/javascript"></script>
}




