<h2>Assign Manager </h2>
<script src="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/js/select2.js"></script>
<script src="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/js/select2.min.js"></script>
<link href="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/css/select2.css" rel="stylesheet" />
<link href="~/Content/make-a-dropdown-with-search-box-using-jquery/select2/dist/css/select2.min.css" rel="stylesheet" />
<div class="form-horizontal">
    <div class="col-md-12">
        <div class="col-md-12">

            <div class="form-group">
                <input id="hdnCompId"
                       name="hiddenId"
                       type="hidden"
                       value="@Session["CompanyId"]" />
                <label class="control-label col-md-2">
                    Employee code:
                </label>
                <div class="col-md-8">
                    <select class="form-control" id="sltEmpCode"></select>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 text-right">
    <input type="button" id="btnAddPopup" value="Add" class="btn custom-button marginbt7" data-toggle="modal" data-target="#AddAssignpopup">
</div>
<div id="AddAssignpopup" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <form id="frmAssMgrPopup" data-toggle="validator" role="form" action="">
        <div class="modal-dialog">
            Modal content
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title" id="H4">
                        <label id="AssignMgrPopupTitle">Add/Edit Assign Manager</label>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">


                            <label class="control-label col-md-4">
                                Manager Code <label style="color:red;font-size: 13px">*</label>
                            </label>
                            <div class="col-md-7">
                                <select id="sltManager" class="form-control"></select>
                            </div>
                        </div>
                    </div>

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Manager Name
                            </label>
                            <div class="col-md-7">
                                <input type="text" id="txtMgrName" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Approval Status
                            </label>
                            <div class="col-md-7">
                                <select id="sltAppStat" class="form-control">
                                    <option value="0">--Select-- </option>
                                    <option value="1">Yes </option>
                                    <option value="2">No </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Priority Number
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="txtPrioNumb" onkeypress="return $validator.IsNumeric(event, this.id)" class="form-control" maxlength="1" />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-4">
                                Approved Cancel Rights
                            </label>
                            <div class="col-md-7">
                                <select id="sltAppCanRigh" class="form-control">
                                    <option value="0">--Select-- </option>
                                    <option value="1">Yes </option>
                                    <option value="2">No </option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnExpAssMgrSave" onclick="$empExpens.saveAssignMgr()" class="btn custom-button">
                        Save
                    </button>
                    <button type="button" id="btnExpAssMgrClose" class="btn custom-button" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="col-md-12 nodisp" id="idassigntable">
    <table id="tblAssignedmanager" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer" >
        <thead>
            <tr>
                <th>ID</th>
                <th>
                    Manager Code
                </th>
                <th>
                    Manager Name
                </th>
                <th>
                    Approval Must
                </th>
                <th>
                    Priority Number
                </th>
                <th>
                    ApproveCancel Rights
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<script src="~/Js/Emp/Emp_Expense.js"></script>

