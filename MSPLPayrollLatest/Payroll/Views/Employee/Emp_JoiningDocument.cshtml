<!-- Modal -->
<form id="frmEmpJoinDoc" data-toggle="validator" role="form" action="javascript:$joinDoc.saveEmpjoindoc();">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Employee Joining Document
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblsltempDocRequired">
                            Documents Required @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <select id="sltempDocRequired" class="form-control" autofocus required></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblfjoinDocUpload">
                            Select File @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="file" id="fjoinDocUpload" class="form-control" placeholder="Select the file"
                                   required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSend" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
