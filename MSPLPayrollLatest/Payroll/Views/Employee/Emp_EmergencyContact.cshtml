<!-- Modal -->
<form id="frmEmpEmergencyContact" data-toggle="validator" role="form">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Emergency Contact
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtEmerContactName">
                            Contact Name @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtEmerContactName" onkeypress="return $validator.alphaonly(event)" class="form-control" placeholder="Enter the Contact Name"
                                 maxlength="40" autofocus required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtEmerContactNumber">
                            Contact Number @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtEmerContactNumber" onkeypress="return $validator.IsNumeric(event, this.id)" oncopy="return false" onpaste="return false" maxlength="10" class="form-control" placeholder="Enter the Contact Number"
                                   required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblddEmerRelationShip">
                            Relationship @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <select class="form-control" id="ddEmerRelationShip" required></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtEmerAddress">
                            Address @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtEmerAddress" class="form-control" placeholder="Enter the Address"
                                  maxlength="80" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSend" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
