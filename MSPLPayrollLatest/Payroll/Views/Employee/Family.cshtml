<!-- Modal -->
<form id="frmEmpFamily" data-toggle="validator" role="form">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    Add/Edit Family
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtName">
                            Name @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtName"  onkeypress="return $validator.alphaonly(event)" class="form-control" placeholder="Enter the Name"
                               maxlength="60" autofocus required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtAddress">
                            Address @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtAddress" class="form-control" placeholder="Enter the Address"
                                  maxlength="80" data-error="Enter the Address" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lblddRelationShip">
                            Relationship @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <select class="form-control" id="ddRelationShip" required></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtDateOfBirth">
                            Date of Birth @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="txtDateOfBirth" class="form-control datepicker" placeholder="Enter the Date of Birth"
                                   data-error="Enter the Date of Birth" readonly required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" id="lbltxtAge">
                            Age @*<label style="color:red;font-size: 13px">*</label>*@
                        </label>
                        <div class="col-md-7">                            
                            <input type="text" id="txtAge" onkeypress="return $validator.IsNumeric(event, this.id)" oncopy="return false" onpaste="return false" maxlength="2" class="form-control" placeholder="Enter the Age"
                                   required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSavefamily" class="btn custom-button">
                    Save
                </button>
                <button type="button" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
