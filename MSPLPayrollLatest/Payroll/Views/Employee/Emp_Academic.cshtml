<form id="frmAcademic" data-toggle="validator" role="form">
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;</button>
            <h4 class="modal-title" id="H4">
                Add/Edit Academic</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtDegreeName">
                        Degree Name @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtDegreeName" class="form-control" placeholder="Enter the Degree Name"
                          maxlength="25" autofocus required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtInistitionName">
                        Institution Name @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtInistitionName" class="form-control" placeholder="Enter the Inistitution Name"
                           maxlength="60" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4" id="lbltxtYearofPassing">
                        Year of Passing @*<label style="color:red;font-size: 13px">*</label>*@</label>
                    <div class="col-md-7">
                        <input type="text" id="txtYearofPassing" onkeypress="return $validator.IsNumeric(event, this.id)" oncopy="return false" onpaste="return false" maxlength="4" class="form-control" placeholder="Enter the Year of Passing"
                            required />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnAcademicSend" onclick="$academic.save();" class="btn custom-button">
                Save</button>
            <button type="button" class="btn custom-button" data-dismiss="modal">
                Close</button>
        </div>
    </div>
</div>
</form>
