<script>
    $('#btnsaveLeaveMaster').on("click", function (e) {
        debugger;
        if (confirm('Do you want to Save this Settings?,Saved data cannot be Change for this Leave Financial year!!!')) {
            //$leaveSettings.SaveLeaveMasterSettings();
            $leaveSettings.CheckLeaveMasterSettings();
        }
    });

    $(":checkbox").on("click", function (e) {
        debugger;
        if (this.id == "IdMaxValue") {

            if (this.checked)
            {
                $("#divmaxid").removeClass("nodisp");
            }
            else
            {
              
                $("#divmaxid").addClass("nodisp");
            }
        }
        else {
          
            if (this.checked)
            {
                $("#divminid").removeClass("nodisp");
              
            }
            else
            {
                $("#divminid").addClass("nodisp");

            }
        }
    });

    function maxperiodchange() {
        debugger;
        if ($('#ddlMaxsetperiod').val() == "M") {
            $('#idmaxtimesallowdeviation').removeClass('nodisp');
        }
        else {
            $('#idmaxtimesallowdeviation').addClass('nodisp');
        }
    };
    function minperiodchange() {
        debugger;
        if ($('#ddlMinsetperiod').val() == "M") {
            $('#idmintimesallowdeviation').removeClass('nodisp');
        }
        else {
            $('#idmintimesallowdeviation').addClass('nodisp');
        }
    };


    $("#ddlminmaxval").change(function () {
        debugger;
        var value;
        value = $("#ddlminmaxval").val();
        if (value == "C") {
            $("#idchkmaxmin").removeClass("nodisp");
            $('#IdMaxValue').prop('checked', false);
            $('#IdMinValue').prop('checked', false);
            $("#txtMinValue").val("");
            $("#txtMinTimes").val("");
            $("#txtMaxValue").val("");
            $("#txtMaxTimes").val("");
        }
        else {
            $("#idchkmaxmin").addClass("nodisp");
            $("#divminid").addClass("nodisp");
            $("#divmaxid").addClass("nodisp");
        }
    });
</script>

