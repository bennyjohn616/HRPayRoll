
<h2>MailConfiguration</h2>


<div class="form-horizontal">
    <div class="col-md-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-6">
                    SMTP Server IP Address:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtIpAddress" class="form-control" placeholder="Enter the Ip Address"required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-6">
                    SMTP Port Number:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtPortNo" class="form-control" placeholder="Enter the port Number" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                   Notification Email From Address:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtFromAddress" class="form-control" placeholder="Enter the From Address" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                   Password:
                </label>
                <div class="col-md-6">
                    <input type="password" id="txtFrompassword" class="form-control" placeholder="Enter the From Password" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                   CC Mail:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtCC" class="form-control" placeholder="Enter the CC Address" required  />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                   Enable SSL:
                </label>
                <div class="col-md-4"  align="right">
                    <input type="checkbox" id="chkEnableSSL" class="control-label" value="0"> <b>Enable SSL</b> 
                    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                    Application Url for Mail Approval:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtURL" class="form-control" placeholder="Enter the URL" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6" align="right">
                    <input type="button" id="btnSave" class="btn custom-button" value="Save" />
                </div>
            </div>
            @*<div class="form-group">
                    <label class="control-label  col-md-6 ">
                        Notification Email Reply Address:
                    </label>
                    <div class="col-md-6">
                        <input type="text" id="txtReplyAddress" class="form-control" placeholder="" />
                    </div>
                </div>*@
            <div class="form-group">
                <fieldset style="width:600px;">
                    <legend><b>Test Email</b></legend>
                    <label class="control-label col-md-4">
                        Email Address:
                    </label>
                    <div class="col-md-5">
                        <input type="text" id="txtEmailAddr" class="form-control" placeholder="Enter the Test Mail" />
                    </div>

                    <input type="button" id="btnSend" class="btn custom-button" onclick="$mailConfiguration.sendTestMail()" value="Test Mail" />

                </fieldset>
            </div>

            </div>

        <div class="col-md-6 nodisp">
            <div class="form-group">
                <label class="control-label  col-md-6">
                    Authenticated Email:
                </label>
                <div class="col-md-6">
                    <select class="form-control" id="sltAutheticated" onchange="">
                        <option value="1">YES</option>
                        <option value="0">NO</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6 no-disp">
                    Authenticated SMTP User:
                </label>
                <div class="col-md-6">
                    <input type="text" id="txtSmtpUser" class="form-control" placeholder="" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label  col-md-6">
                    Authenticated SMTP Password:
                </label>
                <div class="col-md-6">
                    <input type="password" id="txtSmtpPwd" class="form-control" placeholder="" />
                </div>
            </div>
            <div class="form-group" align="right">
                <input type="button" id="btnSave" class="btn custom-button" onclick="$mailConfiguration.mailConfigSave()" value="Save" />
            </div>

            @*<div class="col-md-6" align="center">

                <div class="form-group">
