@{
    ViewBag.Title = "FinanceYearList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_ITaxLayout.cshtml";
}
<script src="~/Js/Leave/leaveOpening.js"></script>
<script src="~/Js/Emp/EmployeeDetails.js"></script>


<h2>Leave Openings</h2>
<div class="tab-content">
    <div role="tabpanel" class="tab-pane active clearfix" id="employees">
        <div class="row">
            <div class="col-md-6 text-right">
                <label class="control-label col-md-4">
                    Leave Type
                </label>
                <div class="col-md-7">
                    <select class="form-control" id="ddLeaveType" autofocus"></select>
                </div>
                <input type="button" id="btnAddempHide" class="nodisp marginbt7" data-target="#AddEmployee" aria-controls="new"
                       role="tab" data-toggle="tab" />
            </div>
            <input type="button" id="btnSaveLeaveopening" value="save" class="btn custom-button marginbt7 ">
        </div>
      
    </div>
</div>




<div class="tab-content">

    <div role="tabpanel" class="tab-pane active clearfix" id="employees">
        <div class="row">

            <div class="col-md-12 nodisp text-right">
                <input type="text" id="txtSearch" class="" placeholder="Search...">
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <select id="sltLookup" class="form-control">
                        <option value="0">-Search-</option>
                        <option value="empCode">Employee Code  </option>
                        <option value="empName">Employee Name</option>
                        <option value="designation">Designation</option>
                    </select>
                </div>
                <div class="col-md-4">

                    <input type="text" id="txtSearchData" role="textbox" class="input-elm form-control"
                           style="width: 98%;" />
                </div>
                <div class="col-md-3 form-group">
                    <input class="btn custom-button" value="Search" type="button" onclick="$leaveOpening.searchData('search')" id="btnSearch" />
                    <input class="btn custom-button" value="Cancel" type="button" onclick="$leaveOpening.searchData('clear')" id="btnClear" />
                </div>
            </div>
            <div class="col-md-12">
                <table id="tblLeaveOpening" class="table table-responsive table-striped table-hover table-condensed userTablehand dataTable no-footer">
                    <thead>
                        <tr>
                            <th class="nodisp">
                            </th>
                            <th>
                                Emp Code
                            </th>
                            <th>
                                Emp Name
                            </th>
                            <th>
                                Designation
                            </th>
                            <th>
                                Date Of Joining
                            </th>
                            <th>
                                Leave Opening
                            </th>
                            <th>
                                Leave Credit
                            </th>
                            <th>
                                Leave Used
                            </th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            @*<td></td>*@
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script src="~/Js/Leave/leaveOpening.js" type="text/javascript"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script>
    var table = $('#tblLeaveOpening').DataTable();
    //if ($('#ddLeaveType').val('00000000-0000-0000-0000-000000000000')) {
    //    table.column(0).visible(false);
    //}
    $companyCom.loadLeaveType({ id: 'ddLeaveType' });
    
    $('#ddLeaveType').change(function () {
        $leaveOpening.LoadData();
    });
</script>


@section Scripts
{
    <script src="~/Js/Leave/leaveOpening.js" type="text/javascript"></script>
}


