
<form id="frmDebitLeavePopup" data-toggle="validator" role="form" action="javascript:$DebitLeave.save();">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title" id="H4">
                    <label id="AssignMgrPopupTitle">Add/Edit Debit Leave</label>
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">


                        <label class="control-label col-md-4">
                           Debit Date <label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="entryDate" class="form-control datepicker Reqrd" placeholder="Enter The Date"
                                   readonly  required/>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Leave Type
                        </label>
                        <div class="col-md-7">
                            <select id="leaveType" class="form-control" ></select>
                        </div>
                    </div>
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Balance
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="leaveBalance" class="form-control" readonly/>
                        </div>
                    </div>
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            No Of days
                        </label>
                        <div class="col-md-7">
                            <input type="text"  id="txtNoOfDays" onkeypress="return $validator.checkDecimal(event, 2)" class="form-control " autofocus required/>
                        </div>
                    </div>
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            Reason<label style="color:red;font-size: 13px">*</label>
                        </label>
                        <div class="col-md-7">
                            <input type="text" id="idDebitReason" class="form-control" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" id="btnDebitLeaveSave" class="btn custom-button">
                    Save
                </button>
                <button type="button" id="btnDebitLeaveClose" class="btn custom-button" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</form>
