@{
    ViewBag.Title = "Popup List";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_LeaveMenu.cshtml";
}
<h2>Change Assign Manager </h2>
<form id="frmChgAssMgr">
    <div class="form-horizontal">
        <div class="col-md-12">
            <div class="col-md-6">

                <div class="form-group">

                    <label class="control-label col-md-5">
                       Existing Manager Code
                    </label>
                    <div class="col-md-6 ">

                        <select class="form-control" id="sltMgrEmpCode"></select>
                        <label class="control-label col-md-5" id="lblMgrEmpCode"></label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-5">
                        Change Manager Code
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" id="sltChgMgrEmpCode" onchange=""></select>
                        <label class="control-label col-md-5" id="lblChgMgrEmpCode"></label>
                    </div>
                </div>
                <div class="col-md-6" align="center">

                    <div class="form-group">
                        <input type="button" id="btnChgAssMgrSave" class="btn custom-button" onclick="$assignManager.savechangeassignmgr();" value="Save" />
                    </div>

                </div>

            </div>
        </div>
    </div>
</form>
<script src="~/Js/Leave/assignManger.js"></script>
<script src="~/Js/Company/CompanyCom.js" type="text/javascript"></script>
<script>
    
    $assignManager.chgMgraddInitialize();
    $companyCom.loadResignedEmployee({ id: 'sltMgrEmpCode' });
    $companyCom.loadUNResignedEmployee({ id: 'sltChgMgrEmpCode' });
</script>

